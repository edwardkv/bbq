<!DOCTYPE html>
<html>
  <head>
    <title>Bbq</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
    <%= link_to t("app.name"), root_path, class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if user_signed_in? %>
          <%= link_to 'Профиль', current_user, class: 'nav-item nav-link' %>
          <%= link_to 'Выйти', destroy_user_session_path,
                          method: :delete, class: 'nav-item nav-link' %>
        <% else %>
          <%= link_to 'Войти', new_user_session_path, class: 'nav-item nav-link' %>
          <%= link_to 'Зарегистрироваться',
                          new_user_registration_path, class: 'nav-item nav-link' %>
        <% end %>
      </div>
    </div>
  </nav>


  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        <%= bootstrap_flash %>

        <%= yield %>
      </div>
      <div class="col-lg-3">
        <div class="well sidebar-nav">

        </div><!--/.well -->
      </div><!--/span-->
    </div><!--/row-->
  </div> <!-- /container -->

  <footer class="navbar fixed-bottom navbar-expand-sm navbar-light bg-light">
    <p>&copy; <%= t("app.company") %></p>
  </footer>

  </body>
</html>
