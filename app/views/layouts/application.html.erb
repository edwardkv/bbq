<!DOCTYPE html>
<html>
  <head>
    <title><%= t("app.name") %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="//api-maps.yandex.ru/2.1/?lang=ru_RU&apikey=e3256972-0755-4a56-a87e-e0ab051186ab"
            type="text/javascript"></script>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js" integrity="sha512-Y2IiVZeaBwXG1wSV7f13plqlmFOx8MdjuHyYFVoYzhyRr3nH/NMDjTBSswijzADdNzMyWNetbLMfOpIPl6Cv9g==" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css" rel="stylesheet">
  </head>

  <body class="d-flex flex-column min-vh-100">

  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
    <%= link_to t("app.name"), root_path, class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if user_signed_in? %>
          <%= link_to t('views.profile'), current_user, class: 'nav-item nav-link' %>
          <%= link_to t('devise.sessions.sign_out'), destroy_user_session_path,
                          method: :delete, class: 'nav-item nav-link' %>
        <% else %>
          <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: 'nav-item nav-link' %>
          <%= link_to t('views.register'),
                          new_user_registration_path, class: 'nav-item nav-link' %>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="container flex-grow-1">
    <div class="row">
      <div class="col-lg-9">
        <%= bootstrap_flash %>

        <%= yield %>
      </div>
      <div class="col-lg-3">
        <div class="well sidebar-nav">

        </div><!--/.well -->
      </div><!--/span-->
    </div><!--/row-->
  </div> <!-- /container -->

  <footer class="mt-5 py-3 bg-light">
    <div class="container-fluid">
      <p>&copy; <%= t("app.company") %></p>
      <ul>
        <li><%= link_to 'English', root_path(locale: :en), class: "text-secondary" %></li>
        <li><%= link_to 'Русский', root_path(locale: :ru), class: "text-secondary"%></li>
      </ul>
    </div>
  </footer>

  </body>
</html>
