<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{asset_path('event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>
          <% if current_user_can_edit?(@event) %>

              <div class="col-md-3">
                <div class="buffer-top">
              <%= link_to t('views.events.change'), edit_event_path(@event),
                          class: 'btn btn-primary' %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="buffer-top">
                  <%= link_to t('views.events.delete'), @event, method: :delete, class: 'btn btn-danger buffer-bottom',
                              data: { confirm: t('views.events.are_you_sure') } %>
                </div>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="event-comments buffer-top">
        <%= render partial: 'comments/form',
                   locals: {comment: @new_comment || @event.comments.build} %>

        <div class="buffer-both">
          <%= render partial: 'comments/comment',
                     collection: @event.comments.except(@new_comment) %>
        </div>
      </div>
    </div>


  </div>

</div>